{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "rayClusterName": {
      "type": "string"
    },
    "environment": {
      "type": "string"
    },
    "keda": {
      "type": "object",
      "description": "KEDA autoscaling configuration for Ray cluster",
      "properties": {
        "enabled": {
          "type": "boolean",
          "description": "Enable KEDA autoscaling",
          "default": true
        },
        "minReplicas": {
          "type": "integer",
          "description": "Minimum number of worker replicas",
          "minimum": 0,
          "default": 1
        },
        "maxReplicas": {
          "type": "integer",
          "description": "Maximum number of worker replicas",
          "minimum": 1,
          "default": 5
        },
        "pollingInterval": {
          "type": "integer",
          "description": "Interval (in seconds) to check metrics",
          "minimum": 1,
          "default": 15
        },
        "cooldownPeriod": {
          "type": "integer",
          "description": "Period (in seconds) to wait before scaling down",
          "minimum": 1,
          "default": 300
        },
        "stabilizationWindowSeconds": {
          "type": "integer",
          "description": "Window (in seconds) during which scaling operations will be delayed",
          "minimum": 0,
          "default": 300
        },
        "scaleDownPercentage": {
          "type": "integer",
          "description": "Maximum percentage to scale down in a single operation",
          "minimum": 1,
          "maximum": 100,
          "default": 50
        },
        "scaleDownPeriodSeconds": {
          "type": "integer",
          "description": "Period (in seconds) for scale down policies",
          "minimum": 1,
          "default": 60
        },
        "triggers": {
          "type": "object",
          "description": "KEDA scaling triggers configuration",
          "properties": {
            "cpu": {
              "type": "object",
              "description": "CPU utilization trigger",
              "properties": {
                "enabled": {
                  "type": "boolean",
                  "description": "Enable CPU-based scaling",
                  "default": true
                },
                "type": {
                  "type": "string",
                  "description": "Type of CPU metric to monitor",
                  "enum": ["Utilization", "AverageValue", "Value"],
                  "default": "Utilization"
                },
                "value": {
                  "type": ["integer", "string"],
                  "description": "CPU utilization percentage threshold",
                  "default": 70
                }
              },
              "required": ["enabled"]
            },
            "memory": {
              "type": "object",
              "description": "Memory utilization trigger",
              "properties": {
                "enabled": {
                  "type": "boolean",
                  "description": "Enable memory-based scaling",
                  "default": false
                },
                "type": {
                  "type": "string",
                  "description": "Type of memory metric to monitor",
                  "enum": ["Utilization", "AverageValue", "Value"],
                  "default": "Utilization"
                },
                "value": {
                  "type": ["integer", "string"],
                  "description": "Memory utilization percentage threshold",
                  "default": 80
                }
              },
              "required": ["enabled"]
            },
            "prometheus": {
              "type": "object",
              "description": "Prometheus metrics trigger",
              "properties": {
                "enabled": {
                  "type": "boolean",
                  "description": "Enable Prometheus-based scaling",
                  "default": false
                },
                "serverAddress": {
                  "type": "string",
                  "description": "Prometheus server address",
                  "default": "http://prometheus-server.monitoring.svc.cluster.local"
                },
                "metricName": {
                  "type": "string",
                  "description": "Name of the metric in Prometheus",
                  "default": "ray_training_queue_length"
                },
                "threshold": {
                  "type": "string",
                  "description": "Threshold value for scaling",
                  "default": "5"
                },
                "query": {
                  "type": "string",
                  "description": "Prometheus query to execute",
                  "default": "sum(ray_task_queue_size{namespace=\"training\"})"
                }
              },
              "required": ["enabled"]
            }
          },
          "additionalProperties": false
        }
      },
      "required": ["enabled"]
    }
  },
  "required": [
    "rayClusterName",
    "environment"
  ],
  "additionalProperties": false
}