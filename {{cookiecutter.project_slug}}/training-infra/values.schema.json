{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "ray": {
      "type": "object",
      "properties": {
        "clusterName": {
          "type": "string"
        },
        "workers": {
          "type": "object",
          "properties": {
            "allowTrafficTo": {
              "type": "array",
              "items": {
                "type": "string"
              }
            }
          },
          "required": ["allowTrafficTo"],
          "additionalProperties": false
        }
      },
      "required": ["clusterName"],
      "additionalProperties": false
    },
    "environment": {
      "type": "string"
    }
  },
  "required": ["ray", "environment"],
  "additionalProperties": false
}
